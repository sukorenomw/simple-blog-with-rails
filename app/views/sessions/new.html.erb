<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<% if flash[:error] %>
		        <div class="alert alert-danger" style="margin-top:2%">
		            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		            <strong>Error!</strong> <%= flash[:error] %>
		        </div>
		    <% end %>
			<div class="panel panel-login">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-6">
							<a href="#" class="active" id="login-form-link">Login</a>
						</div>
					</div>
					<hr>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<!-- form id="login-form" action="http://phpoll.com/login/process" method="post" role="form" style="display: block;"> -->
							<%= form_tag sessions_path, id: "login-form", role: "form", style: "display: block;" do %>
								<div class="form-group">
									<%= text_field_tag :username, nil, placeholder: "Username..", class: "form-control", tabindex: "1", required: "required"  %>
								</div>
								<div class="form-group">
									<%= password_field_tag :password, nil, placeholder: "Password..", class: "form-control", tabindex: "1"  %>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-6 col-sm-offset-3">
											<%= submit_tag "Log In", class: "form-control btn btn-login", tabindex: "4" %>
										</div>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
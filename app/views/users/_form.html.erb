<%= form_for @user, :html => {:class => "form-horizontal", :role => "form"} do |f| %>
	<div class="form-group">
		<%= f.label :username, "Name:", class: "col-sm-2 control-label col-sm-offset-1" %>
		<div class="col-sm-5 ">
			<%= f.text_field :username, {:class => "form-control", :required => "required", :placeholder => "someone"} %>
		</div>
		<% if @user.errors[:username].any? %>
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<div class="alert alert-danger" style="padding:1%; padding-left:3%; margin:0;">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>Error!</strong> name <%= @user.errors[:username].first unless @user.errors[:username].blank? %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="form-group">
		<%= f.label :email, "Email:", class: "col-sm-2 control-label col-sm-offset-1" %>
		<div class="col-sm-5">
			<%= f.text_field :email, {:class => "form-control", :required => "required", :placeholder => "someone@rorblog.com"} %>
		</div>
		<% if @user.errors[:email].any? %>
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<div class="alert alert-danger" style="padding:1%; padding-left:3%; margin:0;">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>Error!</strong> email <%= @user.errors[:email].first unless @user.errors[:email].blank? %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="form-group">
		<%= f.label :password, "Password:", class: "col-sm-2 control-label col-sm-offset-1" %>
		<div class="col-sm-5">
			<%= f.password_field :password, {:class => "form-control", :required => "required", :placeholder => "******"} %>
		</div>
		<% if @user.errors[:password].any? %>
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<div class="alert alert-danger" style="padding:1%; padding-left:3%; margin:0;">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>Error!</strong> password <%= @user.errors[:password].first unless @user.errors[:password].blank? %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="form-group">
		<%= f.label :password_confirmation, "Password Confirmation:", class: "col-sm-2 control-label col-sm-offset-1" %>
		<div class="col-sm-5">
			<%= f.password_field :password_confirmation, {:class => "form-control", :required => "required", :placeholder => "******"} %>
		</div>
		<% if @user.errors[:password_confirmation].any? %>
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<div class="alert alert-danger" style="padding:1%; padding-left:3%; margin:0;">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>Error!</strong> password <%= @user.errors[:password_confirmation].first unless @user.errors[:password_confirmation].blank? %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="form-group">
		<label for="" class="col-sm-2 control-label col-sm-offset-1">Captcha:</label>
		<div class="col-sm-5">
			<%= show_simple_captcha(:label => "masukan kode sesuai gambar diatas") %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-10 col-sm-offset-2">
			<%= f.submit "Submit", class: "btn btn-default btn-primary" %> 
		</div>
	</div>
<% end %>